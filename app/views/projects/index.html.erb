<div class="card">

  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between mb-0">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
    </h2>
  </div>

  <div id="projects" class="card-body pb-1" data-url="<%= sort_projects_path %>">

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none', id: dom_id(project) do %>
        <div class="card hover-background p-0 mb-3">
          <div class="card-body d-flex justify-content-between pt-1 pb-1 ">
            <div>
              <h4 class="mb-0"><%= project.name %></h4>
            </div>

            <div>
              <span class="dark-text-link mr-3">
                <%= project.tasks_completed %>
              </span>
              <span class="badge <%= project.status_color %> dark-text-link mr-3">
                <%= project.percent_complete %>%
              </span>
              <span class="badge badge-<%= project.status %> dark-text-link">
                <%= project.status %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>

</div>

