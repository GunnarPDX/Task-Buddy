<div class="card">
  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between">
      <span><%= @project.name %></span>
      <div>
        <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-warning' %>
        <%= link_to 'Delete', @project, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
      </div>
    </h2>

    <p>
      <strong>Description:</strong>
      <br/>
      <%= @project.description %>
    </p>
  </div>

  <div class="card-header">
    <%= render 'tasks/form' %>
  </div>

  <div class="card-body pb-1">

    <h4>Tasks</h4>

    <% @project.tasks.each do |task| %>
      <% if task.persisted? %>

        <div class="card mb-3">
          <div class="card-body">

            <div class="d-flex justify-content-between">
              <div>
                <span class="badge badge-<%= task.status %> %> mb-2">
                  <%= task.status %>
                </span>
              </div>

              <div>
                <%= link_to 'Update', edit_project_task_path(task.project, task), class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Delete', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>

            <h5 class="card-title mb-2">
              <%= task.name %>
            </h5>


            <p><%= task.description %></p>
          </div>
        </div>


      <% end %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', projects_path, class: 'btn btn-secondary mt-3 mb-3' %>